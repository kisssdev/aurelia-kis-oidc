{
  "root": true,
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:array-func/recommended", "plugin:promise/recommended"],
  "plugins": ["jasmine", "array-func", "promise"],
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "legacyDecorators": true,
      "impliedStrict": true,
      "arrowFunctions": true,
      "blockBindings": true,
      "classes": true,
      "defaultParams": true,
      "destructuring": true,
      "forOf": true,
      "generators": false,
      "modules": true,
      "objectLiteralComputedProperties": true,
      "objectLiteralDuplicateProperties": false,
      "objectLiteralShorthandMethods": true,
      "objectLiteralShorthandProperties": true,
      "spread": true,
      "superInFunctions": true,
      "templateStrings": true,
      "jsx": false,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "arrow-body-style": ["error", "as-needed"],
    "arrow-parens": ["error", "as-needed"],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-var": 2,
    "no-undef": 2,
    "prefer-const": 0,
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-unused-vars": [
      2,
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "no-use-before-define": 0,
    "comma-dangle": [2, "never"],
    "no-cond-assign": [2, "always"],
    "no-console": 1,
    "no-debugger": 1,
    "no-alert": 1,
    "no-constant-condition": 1,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 1,
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-inner-declarations": 2,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-obj-calls": 2,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "block-scoped-var": 0,
    "consistent-return": 0,
    "curly": [2, "multi-line"],
    "default-case": 2,
    "dot-notation": [
      2,
      {
        "allowKeywords": true
      }
    ],
    "eqeqeq": 2,
    "guard-for-in": 1,
    "no-caller": 2,
    "no-else-return": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-fallthrough": 2,
    "no-floating-decimal": 2,
    "no-implied-eval": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-octal": 2,
    "no-octal-escape": 2,
    "no-param-reassign": 0,
    "no-proto": 2,
    "no-redeclare": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-useless-concat": 1,
    "no-with": 2,
    "radix": 2,
    "vars-on-top": 2,
    "wrap-iife": [2, "any"],
    "yoda": 2,
    "brace-style": [
      2,
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "quotes": [2, "single", "avoid-escape"],
    "camelcase": [
      2,
      {
        "properties": "never"
      }
    ],
    "comma-spacing": [
      2,
      {
        "before": false,
        "after": true
      }
    ],
    "comma-style": [2, "last"],
    "eol-last": 2,
    "func-names": 0,
    "implicit-arrow-linebreak": ["error", "beside"],
    "key-spacing": [
      2,
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "new-cap": [
      2,
      {
        "newIsCap": true
      }
    ],
    "no-nested-ternary": 2,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-extra-parens": [2, "functions"],
    "no-underscore-dangle": 0,
    "one-var": [2, "never"],
    "semi": [2, "always"],
    "semi-spacing": [
      2,
      {
        "before": false,
        "after": true
      }
    ],
    "keyword-spacing": [
      2,
      {
        "before": true,
        "after": true
      }
    ],
    "space-before-blocks": 2,
    "function-paren-newline": ["error", "multiline"],
    "space-before-function-paren": [2, "never"],
    "space-infix-ops": 2,
    "spaced-comment": [
      0,
      "always",
      {
        "exceptions": ["*"],
        "markers": ["*"]
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 3,
        "maxEOF": 1,
        "maxBOF": 0
      }
    ],
    "no-return-assign": ["error", "except-parens"],
    "padded-blocks": [
      "error",
      {
        "classes": "always"
      }
    ],
    "quote-props": ["error", "consistent"],
    "object-curly-spacing": ["error", "always", { "objectsInObjects": false, "arraysInObjects": false }],
    "valid-jsdoc": [
      "error",
      {
        "prefer": {
          "returns": "return",
          "arg": "param",
          "argument": "param"
        },
        "preferType": {
          "object": "Object",
          "array": "Array",
          "date": "Date",
          "regExp": "RegExp",
          "moment": "Moment",
          "String": "string",
          "Number": "number",
          "Boolean": "boolean",
          "Function": "function"
        },
        "requireParamDescription": true,
        "requireReturnDescription": false,
        "requireReturn": false
      }
    ]
  }
}
